<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>mediabar-gui</display-name>
    <display-name>Channel HUB Media Bar GUI</display-name>
    <context-param>
        <description>Vaadin production mode</description>
        <param-name>productionMode</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>mediabarapplication</servlet-name>
        <servlet-class>it.almawave.telephony.http.ReactUiServlet</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mediabarapplication</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
     </welcome-file-list>
    <filter>
        <filter-name>KeycloakAdapterFilter</filter-name>
        <filter-class>it.almawave.channels.sdk.security.SecurityFilter</filter-class>
        <init-param>
            <param-name>autologin</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>user-header</param-name>
            <param-value>channel-user</param-value>
        </init-param>
        <init-param>
            <param-name>granted-authorities-header</param-name>
            <param-value>channel-authorities</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>KeycloakAdapterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>cognitive</realm-name>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>gui</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>HUB_SUPERVISOR</role-name>
            <role-name>HUB_ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>HUB_SUPERVISOR</role-name>
    </security-role>
    <security-role>
        <role-name>HUB_AGENT</role-name>
    </security-role>
</web-app>
